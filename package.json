{
  "name": "@k-rf/eslint-config",
  "version": "0.1.0",
  "description": "ESLint configuration for @k-rf",
  "author": "Kawano Kenichi <kenichi.k.820@gmail.com>",
  "repository": {
    "url": "https://github.com/k-rf/eslint-config",
    "type": "git"
  },
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "prepare": "husky install",
    "clean": "rimraf dist",
    "build": "bun run clean && tsc --project tsconfig.json",
    "lint": "eslint --fix --cache .",
    "format": "prettier . --write",
    "typing": "tsc --project tsconfig.json --pretty --noEmit",
    "check:all": "npm-run-all -s check:type check:format check:lint",
    "test": "jest --runInBand",
    "test:cov": "jest --runInBand --coverage=true",
    "test:watch": "jest --runInBand --watch"
  },
  "dependencies": {
    "@cspell/eslint-plugin": "^8.6.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-sonarjs": "^0.24.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "eslint": "^8.57.0",
    "fp-ts": "^2.16.3",
    "globals": "^14.0.0",
    "ts-pattern": "^5.0.8",
    "typescript-eslint": "^7.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.27",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "dotenv-cli": "^7.4.1",
    "esbuild-register": "^3.5.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.2"
  }
}
